 * Place a brief description of how the applet works here.
 */
@class <%= applet_class_name %> {

  /**
   * Method: initialize
   *
   * Initializes the <%= applet_title %> applet.
   */
  @method initialize() {
    // Set up any instance variables here.
  }

  /**
   * Method: loadPath
   *
   * Loads the data for the given path.
   *
   * Parameters:
   *   path - the path to load
   */
  @method loadPath(path) {

    // Add this tool's entry to the navigation bar.
    <%= navbar_code %>

    // Display some text.
    self.addText("Welcome to the <%= tool_name %> tool.");
  }

  /**
   * Method: addText
   *
   * Appends text to the applet content.  This is just a sample method that
   * you are free to remove and/or replace with your own methods.
   *
   * Parameters:
   *   theText - the string to display on the page
   */
  @method addText(theText) {
    var textPara = I3.ui.create("p");
    textPara.appendChild(I3.ui.text(theText));
    I3.ui.get("appletContent").appendChild(textPara);
  }

} // end <%= module_name %>.<%= applet_class_name %>
